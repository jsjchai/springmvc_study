<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>jquery动画效果</title>
<script type="text/javascript" src="./js/jquery-1.11.2.js"></script>
<script type="text/javascript">
	//onload事件 
	$(document).ready(function(){
		//向右移动
		$("#b1").click(function(){
			$("#d1").animate({left: '+800px'}, "slow");
		});
		//向左移动
		$("#b2").click(function(){
			$("#d1").animate({left: '-800px'}, "slow");
		});
		//动画
		$("#b3").click(function(){
			 $("#d1").animate({ 
				    width: "90%",
				    height: "100%", 
				    fontSize: "10em", 
				    borderWidth: 10
				  }, 1000 );
		});
		//回调函数
		$("#button1").click(function(){  
            $("p").hide("slow");  
             alert("不使用回调，先弹出对话框再隐藏！");  
        });  
        $("#button2").click(function(){  
            $("p").hide("slow",function(){  
                alert("使用回调函数，先隐藏再弹出对话框!");  
            });          
        });  
	});
</script>
</head>
<body>
	<input type="button" value="向右移动" id="b1">
	<input type="button" value="向左移动" id="b2">
	<input type="button" value="动画" id="b3">
	<input id="button1" type="button" value="没使用回调函数!" />  
    <input id="button2" type="button" value="使用回调函数!" />  
	<hr>
	<div id="d1"
		style="width: 100px; height: 100px; background-color: gray; margin: 10px; position: absolute;"></div>

</body>
</html>